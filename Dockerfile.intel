FROM boinc/client

LABEL maintainer="BOINC" \
      description="A base container image for lightweight Intel GPU-savvy BOINC clients"

# Install
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Install PPA dependency
    software-properties-common \
    # Generic OpenCL ICD Loader
    ocl-icd-libopencl1 && \
    # Install Intel NEO OpenCL
    add-apt-repository -y ppa:intel-opencl/intel-opencl && \
    apt-get update && apt-get install -y --no-install-recommends \
    intel-opencl && \
# Cleaning up
    apt-get remove -y software-properties-common && \
    apt-get autoremove -y && \
    rm -rf /var/lib/apt/lists/*
